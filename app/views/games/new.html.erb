<ul>
<% if @game.errors.any? %>
<% @game.errors.full_messages.each do |msg| %>
<li> <%= msg %> </li>
  <% end %>
<% end %>
</ul>

<h1>New Game</h1>

<%= form_for @game do |f|%>

  <%= f.label :date%>
  <%= f.text_field :date%><br><br>

  <%= f.label :location%>
  <%= f.text_field :location%><br><br>

  <%= f.submit%>
<%end%>
