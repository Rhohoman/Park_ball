<ul>
<% if @team.errors.any? %>
<% @team.errors.full_messages.each do |msg| %>
<li> <%= msg %> </li>
  <% end %>
<% end %>
</ul>

<h1>Edit <%= "#{@team.name}"%></h1>

<%= form_for @team do |f|%>

  <%= f.label :location%>
  <%= f.text_field :location%><br><br>

  <%= f.label :name%>
  <%= f.text_field :name%><br><br>

  <%= f.label :mascot%>
  <%= f.text_field :mascot%><br><br>

  <%= f.submit%>
<%end%>
